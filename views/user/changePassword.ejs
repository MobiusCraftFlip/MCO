<%- include('../components/header') %>
<div class="columns login-hero">
  <div class="column is-1 level flat">
  </div>
  <div class="column is-5 level">
    <h1 class="title is-1 login-hero-title">Reset Your Password</h1>
    <h2 class="subtitle is-3">Silly Child</h2>
  </div>
  <div class="column login-form">
    <form action="/admin/change-password/<%= secret %>" method="post" id="form">
      <div class="container">
        <div class="field">
          <label class="label">Password</label>
          <div class="control">
            <input class="input" name="password" type="password" placeholder="8+ charecters with atleast one number and memorable"
              id="form-password">
          </div>
          <p class="help" id="form-password-help" hidden></p>
        </div>
        <div class="field">
          <label class="label">Re-Enter Password</label>
          <div class="control">
            <input class="input" type="password" placeholder="Just to ensure you didn't make a typo!"
              id="form-repassword">
          </div>
          <p class="help" id="form-repassword-help" hidden></p>
        </div>
        <div class="g-recaptcha" data-theme="dark" data-sitekey="<%= recaptcha_key %>" data-callback="recaptchaCallback"></div>
        <br />
        <div class="field is-grouped">
          <div class="control">
            <input id="submit-button" value="Submit" type="submit" class="button is-link" disabled></input>
          </div>
          <div class="control">
            <button class="button">Cancel</button>
          </div>
        </div>
      </div>
    </form>
  </div>
  <div class="column is-1 level">
  </div>
</div>
<script src="/js/bundle-signup.js"></script>
<%- include('../components/footer') %>