<body>
  <nav class="navbar" role="navigation" aria-label="main navigation dropdown ">
    <div class="container">
      <div class="navbar-brand">
        <a class="navbar-item" href="/">
          <h2 class="title">
            <span class="is-primary">MCO</span>
          </h2>
        </a>

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false"
          data-target="navbar-ham-menu" id="navbar-ham">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbar-ham-menu" class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item">
            Home
          </a>
          <% if((isAuth && user.flags.includes("glocadmin")) || isAuth && user.roblox_id) { %>
            <div class="navbar-item has-dropdown is-hoverable">
              <a class="navbar-link">
                Glocestershires
              </a>
              <div class="navbar-dropdown">
                <% if(isAuth && user.roblox_id) { %>
                  <a class="navbar-item" href="/gloc/players/<%= user.roblox_id %>">
                    My History
                  </a>
                <% } %>
                <% if(isAuth && user.flags.includes("glocadmin")) { %>
                  <a class="navbar-item" href="/gloc/warnings">
                    Warnings
                  </a>
                <% } %>
              </div>
            </div>
            
            <% } %>
            <% if((isAuth && user.flags.includes("techteam"))) { %>
              <div class="navbar-item has-dropdown is-hoverable">
                <a class="navbar-link">
                  Admin
                </a>
                <div class="navbar-dropdown">
                    <a class="navbar-item" href="/users">
                      Users
                    </a>
                    <a class="navbar-item" href="/admin/flags">
                      Flags
                    </a>
                    <a class="navbar-item" href="/admin/flags/create">
                      Flags Create
                    </a>
                </div>
              </div>
              <% } %>
        </div>
        <div class="navbar-end">
          <% if(!isAuth){ %>
          <div class="navbar-item">
            <div class="buttons">
              <a class="button is-info" style="background-color: #723881" href="/signup">
                <strong>Sign up</strong>
              </a>
              <a class="button is-light" href="/login">
                Log in
              </a>
            </div>
          </div>
          <% } else {%>
          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link">
              <%= user.name %>
            </a>

            <div class="navbar-dropdown">
              <a class="navbar-item" href="/profile">
                Profile
              </a>
              <a class="navbar-item" href="/logout">
                Logout
              </a>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </nav>